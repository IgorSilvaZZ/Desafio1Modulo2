  "paths": {
    "/users": {
      "post": {
        "tags": ["users"],
        "summary": "Criando Usuario",
        "description": "Criar um novo usuario",
        "requestBody": {
          "content": {
            "application/json": {
              "description": "Campos obrigatorios para criação do usuario",
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "id": "f4eddb60-f9c1-4b05-bc62-6e4b2268642d",
                  "admin": false,
                  "name": "Igor Silva",
                  "email": "igor@gmail.com",
                  "created_at": "2021-10-13T00:19:46.838Z",
                  "updated_at": "2021-10-13T00:19:46.838Z"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario criado com sucesso",
            "content": {
              "appication/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string"
                      }
                    }
                  },
                  "example": {
                    "message": "Usuario criado com sucesso"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Usuario já existente!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string"
                      }
                    }
                  },
                  "example": {
                    "error": "Usuario já existente!"
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["users"],
        "summary": "Retorna todos usuarios",
        "description": "Somente admin pode acessar",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "schema": {
              "type": "uuid"
            },
            "required": true,
            "description": "ID do administrados para listagem de todos usuarios cadastrados"
          }
        ],
        "responses": {
          "200": {
            "description": "Listagem de todos os usuarios",
            "content": {
              "appication/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "UUID"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "name": {
                        "type": "string"
                      },
                      "emai": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "date"
                      },
                      "updated_at": {
                        "type": "date"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Usuario sem permissão ou Usuario não encontrado!",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "items": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "string"
                        }
                      }
                    },
                    "example": {
                      "error": "Você precisa ser administrador para listar todos os usuarios"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
